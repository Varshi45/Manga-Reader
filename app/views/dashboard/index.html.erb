<!-- app/views/dashboard/index.html.erb -->

<!-- Search Form -->
<div class="mb-8">
  <%= form_with url: user_dashboard_path, method: :get, local: true, class: "flex items-center space-x-2" do %>
    <input type="text" name="search" placeholder="Search mangas..." value="<%= params[:search] %>"
      class="p-3 border border-gray-300 rounded-l-md w-full shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" />
    <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded-r-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out">
      Search
    </button>
  <% end %>
</div>

<div class="w-full">
  <!-- Render All Manga Partial -->
  <%= render 'all_manga' %>

  <!-- Render Top Manga Partial -->
  <div class="mt-12">
    <%= render 'top_manga' %>
  </div>
</div>
