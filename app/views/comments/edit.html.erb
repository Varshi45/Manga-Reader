<!-- app/views/comments/edit.html.erb -->
<div class="bg-white p-6 shadow-lg rounded-lg max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-4 text-center">Edit Comment</h1>

  <%= form_with model: [@manga, @comment], url: manga_comment_path(@manga, @comment), method: :patch, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :content, "Edit your Comment:", class: "block mb-2 text-gray-700" %>
      <%= form.text_area :content, class: "border rounded p-2 w-full" %>
    </div>
    <%= form.submit "Update Comment", class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  <% end %>
</div>
