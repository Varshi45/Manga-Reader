<!-- app/views/password_resets/new.html.erb -->
<h1 class="text-2xl font-bold mb-6">Reset Password</h1>

<%= form_with model: @user, url: password_resets_path do |form| %>
  <div class="container m-2 p-4 bg-white shadow rounded">
    <div class="field mb-4">
      <%= form.label :email, class: "block font-medium text-sm text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="field">
      <%= form.submit "Reset Password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
