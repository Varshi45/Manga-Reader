<!-- app/views/admin/chapters/new.html.erb -->
<%= form_with(model: [ @manga, @chapter ], url: admin_manga_chapters_path(@manga), local: true, class: "space-y-6") do |form| %>
  <div class="field">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :link, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :link, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>
  
  <div class="actions">
    <%= form.submit "Add Chapter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
