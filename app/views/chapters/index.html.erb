<!-- app/views/chapters/index.html.erb -->
<div class="bg-white p-6 rounded-lg shadow-lg w-full">
  <h1 class="text-3xl mb-4 font-semibold">All Chapters of <%= @manga.title %></h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
    <% @manga.chapters.each do |chapter| %>
      <div class="chapter-item p-4 bg-gray-100 border border-gray-300 rounded-md text-center">
        <a href="<%= chapter.link %>" target="_blank" class="text-blue-600 hover:underline"><%= chapter.title %></a>
      </div>
    <% end %>
  </div>
</div>
